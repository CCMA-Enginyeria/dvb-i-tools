<?xml version="1.0" encoding="UTF-8"?>
<ClassificationScheme uri="urn:tva:metadata:cs:SubtitleCodingFormatCS:2023" xmlns="urn:tva:mpeg7:2008" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:tva:mpeg7:2008 tva_mpeg7.xsd" xsi:type="ClassificationSchemeType">
    <!-- ##################################################################### -->
    <!-- SUBTITLECODINGFORMAT                                                  -->
    <!-- DEFINITION: Defines the coding format used for subtitles.             -->
    <!-- NOTE: This CS replaces the CaptionCodingFormatCS.                     -->
    <!-- ##################################################################### -->
    <Term termID="1">
        <Name xml:lang="en">WST Subtitles</Name>
        <Definition xml:lang="en">World System Teletext subtitles</Definition>
    </Term>
    <Term termID="2">
        <Name xml:lang="en">DVB Subtitles</Name>
        <Definition xml:lang="en">Digital Video Broadcasting Subtitles [ETSI EN 300 743].</Definition>
        <Term termID="2.1">
            <Name>DVB Subtitles (bitmaps)</Name>
            <Definition>DVB subtitling service containing object_data_segment{}s with
                object_coding_method=0x00.</Definition>
            <Term termID="2.1.2">
                <Name>Compliance with version 1.1.1 and 1.2.1 of [ETSI EN 300 743]</Name>
                <Definition>Indicative service compatibility with SDTV.</Definition>
            </Term>
            <Term termID="2.1.3">
                <Name>Compliance with version 1.3.1 of [ETSI EN 300 743]</Name>
                <Definition>Indicative service compatibility with HDTV, SDTV as defined in V1.3.1 of [ETSI EN 300 743].</Definition>
            </Term>
            <Term termID="2.1.4">
                <Name>Compliance with version 1.4.1 and 1.5.1 of [ETSI EN 300 743]</Name>
                <Definition>Indicative service compatibility with 3DTV, HDTV, SDTV.</Definition>
            </Term>
            <Term termID="2.1.5">
                <Name>Compliance with version V1.6.1 of [ETSI EN 300 743]</Name>
                <Definition>Indicative service compatibility with HDTV, UHDTV, 3DTV, SDTV as defined in V1.6.1 of [ETSI EN 300 743].</Definition>
            </Term>
        </Term>
    </Term>
    <Term termID="3">
        <Name xml:lang="en">TTML Subtitles</Name>
        <Definition xml:lang="en">Timed Text Markup Language subtitles</Definition>
        <Term termID="3.1">
            <Name>EBU-TT</Name>
            <Definition>EBU Timed Text Subtitles</Definition>
        </Term>
        <Term termID="3.2">
            <Name>EBU-TT-D</Name>
            <Definition>EBU-TT Distribution Format Subtitles</Definition>
            <Term termID="3.2.1">
                <Name>EBU-TT-D Version 1.0</Name>
            </Term>
            <Term termID="3.2.2">
                <Name>EBU-TT-D Version 1.0.1</Name>
            </Term>
        </Term>
        <Term termID="3.3">
            <Name xml:lang="en">IMSC Subtitles</Name>
            <Definition xml:lang="en">Internet Media Subtitles and Captions.</Definition>
            <Term termID="3.3.1">
                <Name xml:lang="en">IMSC Subtitles Text Profile</Name>
                <Definition xml:lang="en">Internet Media Subtitles and Captions, text-only profile.</Definition>
                <Term termID="3.3.1.1">
                    <Name xml:lang="en">IMSC Subtitles Text Profile Version 1.0</Name>
                </Term>
                <Term termID="3.3.1.2">
                    <Name xml:lang="en">IMSC Subtitles Text Profile Version 1.0.1</Name>
                </Term>
                <Term termID="3.3.1.3">
                    <Name xml:lang="en">IMSC Subtitles Text Profile Version 1.1</Name>
                </Term>
                <Term termID="3.3.1.4">
                    <Name xml:lang="en">IMSC Subtitles Text Profile Version 1.2</Name>
                </Term>
            </Term>
            <Term termID="3.3.2">
                <Name xml:lang="en">IMSC Subtitles Image Profile</Name>
                <Definition xml:lang="en">Internet Media Subtitles and Captions, image-only profile.</Definition>
                <Term termID="3.3.2.1">
                    <Name xml:lang="en">IMSC Subtitles Image Profile Version 1.0</Name>
                </Term>
                <Term termID="3.3.2.2">
                    <Name xml:lang="en">IMSC Subtitles Image Profile Version 1.0.1</Name>
                </Term>
                <Term termID="3.3.2.3">
                    <Name xml:lang="en">IMSC Subtitles Image Profile Version 1.1</Name>
                </Term>
                <Term termID="3.3.2.4">
                    <Name xml:lang="en">IMSC Subtitles Image Profile Version 1.2</Name>
                </Term>
            </Term>
        </Term>
    </Term>
    <Term termID="4">
        <Name xml:lang="en">WebVTT Subtitles</Name>
        <Definition xml:lang="en">Web Video Text Tracks subtitles.</Definition>
    </Term>
    <Term termID="5">
        <Name xml:lang="en">Application Subtitles</Name>
        <Definition xml:lang="en">In-application rendered subtitles.</Definition>
    </Term>
    <Term termID="6">
       <Name xml:lang="en">DVB TTML Subtitles</Name>
       <Definition xml:lang="en">DVB TTML Subtitles as defiend in [ETSI EN 303 560]. If no explicit payload format is signalled, the Default conformance point processor profile applies.</Definition>
	  </Term>
    <Term termID="7">
      <Name xml:lang="en">Subtitles in ISOBMFF</Name>
      <Definition xml:lang="en">Subtitles encapsulated in ISOBMFF according to ISO/IEC 14496-30.</Definition>
    </Term>
    <Term termID="99">
		  <Name xml:lang="en">other subtitles</Name>
		  <Definition xml:lang="en">Other subtitling format not specifically identified in this Classification scheme.</Definition>
	  </Term>
</ClassificationScheme>
